    <h1>List Users</h1>
    <a href="/insert-user" class="btn btn-primary">Insert user</a>
    <br /><br />
    <table class="table">
      <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Email</td>
        <td>Address</td>
        <td>Action</td>
      </tr>
      <% data.forEach(element => { %>
      <tr>
        <td><%= element.id %></td>
        <td><%= element.name %></td>
        <td><%= element.email %></td>
        <td><%= element.address %></td>
        <td>
          <a href="/detail-user/<%= element.id %>">Detail</a>
          <a href="/edit-user/<%= element.id %>">Edit</a>
          <a href="/delete-user/<%= element.id %>">Delete</a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
